<Mcml xmlns="http://schemas.microsoft.com/2006/mcml"
	  xmlns:cor="assembly://MsCorLib/System"
	  xmlns:me="Me"
	  >

	<!-- The background used when the posters zoom, sows most ovbiously when labels are turned on -->
	<Color Name="PosterZoomBackground" Color="Transparent"/>
  <Color Name="PanelBackground" Color="128,128,128"/>

  <!-- The 3 font colors used in the app -->
	<Color Name="FontColorLight" Color="255,255,255"/>
	<Color Name="FontColorMedium" Color="190,190,190"/>
	<Color Name="FontColorDark" Color="130,130,130"/>
	<Color Name="TabFontColorLight" Color="128,128,128"/>
	<Color Name="TabFontColorMedium" Color="32,32,32"/>

	<!-- The color of the filter and associated alpha level used in the minimal movie page and also to define the color of the watch/unwatch markers in poster views-->
	<Color Name="FilterColor" Color="White"/>
	<Color Name="FillColor" Color="Black"/>
	<cor:Single Name="FilterAlpha" Single="0.71" />

	<!-- color filter applied to backdrops on thumbstrip view and detailed movie view-->
	<Color Name="BackdropFilter" Color="White"/>

	<!-- Background is faded vertically from color1 in the middle to color2 top and bottom-->
	<Color Name="BackgroundColor1" Color="60,60,60" />
	<Color Name="BackgroundColor2" Color="0,0,0" />

	<cor:Single Name="BackdropAlpha" Single="0.4" />
	<cor:Single Name="PosterDimAlpha" Single="0.8" />
	<cor:Boolean Name="ShowWatchedMarkerBackgrounds" Boolean="false" />
	<Color Name="MirrorFilter" Color="White"/>
	<cor:Single Name="MirrorAlpha" Single="0.4" />
	<Color Name="DimPosterFilter" Color="150,150,150"/>
	
</Mcml>
