<Mcml xmlns="http://schemas.microsoft.com/2006/mcml"
	  xmlns:cor="assembly://MSCorLib/System"
	  xmlns:col="assembly://MSCorLib/System.Collections"
	  xmlns:s="file://c:\programdata\mediabrowser\Styles_DoNotEdit.mcml"
	  >


	<UI Name="GenreList">
		<Properties>
			<col:IList Name="SourceData" IList="$Required" />
			<Font Name="Font" Font="$Required"/>
		</Properties>
		<Rules>
			<Binding Target="[GenreRepeater.Source]" Source="[SourceData]"/>
		</Rules>
		<Content>
			<Repeater Name="GenreRepeater"  >
				<Layout>
					<FlowLayout Orientation="Horizontal" AllowWrap="true" Spacing="25,0"/>
				</Layout>
				<Divider>
					<Text Content="●" Font="[Font]" Color="color://s:FontColorMedium" Alpha="0.6"  />
				</Divider>
				<Content>
					<Text Content="[RepeatedItem!cor:String]" Font="[Font]" Color="color://s:FontColorMedium" />
				</Content>
			</Repeater>
		</Content>
	</UI>
</Mcml>