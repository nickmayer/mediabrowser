<Mcml xmlns="http://schemas.microsoft.com/2006/mcml"
	  xmlns:cor="assembly://MSCorLib/System"
	  xmlns:col="assembly://MSCorLib/System.Collections"
	  xmlns:s="resx://MediaBrowser/MediaBrowser.Resources/Styles"
	  >


	<UI Name="GenreList">
		<Properties>
			<col:IList Name="SourceData" IList="$Required" />
		</Properties>
		<Rules>
			<Binding Target="[GenreRepeater.Source]" Source="[SourceData]"/>
		</Rules>
		<Content>
			<Repeater Name="GenreRepeater"  >
				<Layout>
					<FlowLayout Orientation="Horizontal" AllowWrap="true" Spacing="25,0"/>
				</Layout>
				<Divider>
					<Text Content="●" Font="font://s:GenreFont" Color="color://s:GenreColor" Alpha="0.6"  />
				</Divider>
				<Content>
					<Text Content="[RepeatedItem!cor:String]" Font="font://s:GenreFont" Color="color://s:GenreColor" />
				</Content>
			</Repeater>
		</Content>
	</UI>
</Mcml>