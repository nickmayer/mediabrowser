                          <FlowLayout Orientation="Horizontal" StripAlignment="Center" ItemAlignment="Center"/>
                        </Layout>
                        <Children>
                          <mi:MediaInfoPanel Name="EpisodeMediaInfo" Item="[Item]" MaxIconSize="0,30" Margins="0,0,5,0"/>
