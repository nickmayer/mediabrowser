<Window
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	x:Class="Configurator.AddPluginSourceWindow"
	x:Name="Window"
	Title="AddPluginSourceWindow"
	Width="496" Height="175">

	<Grid x:Name="LayoutRoot">
        <Button Height="32" HorizontalAlignment="Right" Margin="0,0,105,23" Name="btnOK" VerticalAlignment="Bottom" Width="89"  FontSize="14" Click="btnOK_Click" IsDefault="True">OK</Button>
        <Button Height="32" HorizontalAlignment="Right" Margin="0,0,8,23" Name="btnCancel" VerticalAlignment="Bottom" Width="91" FontSize="14" Click="btnCancel_Click" IsCancel="True">Cancel</Button>
        <Label Height="28" Margin="12,8,8,0" Name="lblName" VerticalAlignment="Top" FontSize="14">Add plug-in source (may be a URL or a local path)</Label>
        <TextBox Margin="12,44,8,67" Name="pluginSource" FontSize="14" ></TextBox>
    </Grid>
</Window>