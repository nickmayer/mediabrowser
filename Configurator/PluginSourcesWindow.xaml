<Window x:Class="Configurator.PluginSourcesWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Title="Plugin Sources" Height="300" Width="600">
    <Grid>
    	<Label Margin="20,20,20,0" VerticalAlignment="Top" Height="28" Content="Plug-in sources" FontSize="14"/>
    	<ListBox IsSynchronizedWithCurrentItem="True" Margin="20,50,20,60" Name="sourceList" />
    	<Button HorizontalAlignment="Left" Margin="20,0,0,20" VerticalAlignment="Bottom" Width="90" Height="32" Content="Add" Name="addButton" Click="addButton_Click" />
    	<Button HorizontalAlignment="Left" Margin="120,0,0,20" VerticalAlignment="Bottom" Width="90" Height="32" Content="Remove" Name="removeButton" Click="removeButton_Click" />
        <Button Height="32" HorizontalAlignment="Right" Margin="0,0,20,20" Name="btnDone" VerticalAlignment="Bottom" Width="90" Click="btnDone_Click">Done</Button>
    </Grid>
</Window>
