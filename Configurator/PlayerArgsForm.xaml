<Window x:Class="Configurator.PlayerArgsForm"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Title="External Player Parameters" Height="175" Width="450" WindowStartupLocation="CenterOwner" ResizeMode="NoResize">
    <Grid>
        <Button FontSize="14" Height="32" HorizontalAlignment="Right" Margin="0,0,20,20" Name="btnOK" VerticalAlignment="Bottom" Width="80" Click="btnOK_Click">OK</Button>
        <Button FontSize="14" Height="32" HorizontalAlignment="Right" Margin="0,0,110,20" Name="btnCancel" VerticalAlignment="Bottom" Width="80" Click="btnCancel_Click">Cancel</Button>
        <TextBox FontSize="14" Height="28" Margin="20,50,20,0" Name="txtArgs" VerticalAlignment="Top" />
        <Label FontSize="14" Height="28" Margin="20,20,20,0" VerticalAlignment="Top">Specify the parameters to send to the player.</Label>
    </Grid>
</Window>
