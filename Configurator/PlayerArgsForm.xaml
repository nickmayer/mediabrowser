<Window x:Class="Configurator.PlayerArgsForm"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Title="Player Parameters" Height="189" Width="357" WindowStartupLocation="CenterOwner">
    <Grid>
        <Button FontSize="14" Height="32" HorizontalAlignment="Left" Margin="10,0,0,25" Name="btnOK" VerticalAlignment="Bottom" Width="89" Click="btnOK_Click">OK</Button>
        <Button FontSize="14" Height="32" HorizontalAlignment="Right" Margin="0,0,23,25" Name="btnCancel" VerticalAlignment="Bottom" Width="91" Click="btnCancel_Click">Cancel</Button>
        <TextBox FontSize="14" Height="28" Margin="10,46,23,0" Name="txtArgs" VerticalAlignment="Top" />
        <Label FontSize="14" Height="28" Margin="10,10,23,0" VerticalAlignment="Top">Specify the parameters to send to the player.</Label>
    </Grid>
</Window>
