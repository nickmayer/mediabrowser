<Window x:Class="MediaBrowserService.WarnDialog"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Title="Warning" Height="311" Width="534" ShowInTaskbar="False" ResizeMode="NoResize">
    <Grid>
        <Label Height="44" Margin="58,12,58,0" Name="label1" VerticalAlignment="Top" FontSize="24" FontWeight="Bold" HorizontalContentAlignment="Center">Warning</Label>
        <TextBlock Margin="35,62,33,57" Name="tbMessage" FontSize="14" Text="This is a message..." TextWrapping="Wrap" />
        <Button Height="35" HorizontalAlignment="Right" Margin="0,0,46,12" Name="btnOK" VerticalAlignment="Bottom" Width="85" FontSize="14" IsDefault="True" Click="btnOK_Click">OK</Button>
        <CheckBox Height="21" Margin="70,0,230,17.81" Name="cbxDontShowAgain" VerticalAlignment="Bottom" FontSize="14">Don't show this message again</CheckBox>
    </Grid>
</Window>
