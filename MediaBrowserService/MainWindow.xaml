<Window x:Class="MediaBrowserService.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Title="Media Browser Service" Height="582" Width="574" Icon="/MediaBrowserService;component/MBService.ico"
        Closing="OnClose" StateChanged="OnStateChanged" >
    <Grid>
        <GroupBox FontSize="14" Header="Status" Margin="115,143,120,204" Name="groupBox8">
            <Grid>
                <Label Height="28" Margin="25,31,16,0" Name="lblSvcActivity" VerticalAlignment="Top">Please check for proper installation</Label>
                <Label Margin="25,65,6,74" Name="lblNextSvcRefresh">Next Refresh at ...</Label>
                <ProgressBar Height="23" Margin="19,0,26,20" Name="refreshProgress" VerticalAlignment="Bottom" Visibility="Hidden" Maximum="1" />
            </Grid>
        </GroupBox>
        <GroupBox Header="Schedule" Height="116" Margin="115,0,120,69" Name="groupBox9" VerticalAlignment="Bottom" FontSize="14">
            <Grid>
                <Label Height="28" HorizontalAlignment="Left" Margin="27,13,0,0" Name="label14" VerticalAlignment="Top" Width="102" FontSize="14">Interval (days)</Label>
                <Label Height="28" Margin="147,13,26,0" Name="label15" VerticalAlignment="Top" FontSize="14">Refresh Time (24hr)</Label>
                <TextBox Height="22.38" HorizontalAlignment="Left" LostFocus="tbxRefreshInterval_LostFocus" Margin="39,0,0,21" Name="tbxRefreshInterval" PreviewTextInput="NumberOnly_PreviewTextInput" TextAlignment="Right" VerticalAlignment="Bottom" Width="43" FontSize="14">1</TextBox>
                <TextBox Height="23.38" HorizontalAlignment="Right" LostFocus="tbxRefreshHour_LostFocus" Margin="0,0,95,20" Name="tbxRefreshHour" PreviewTextInput="NumberOnly_PreviewTextInput" TextAlignment="Right" VerticalAlignment="Bottom" Width="52" FontSize="14">2</TextBox>
                <Label HorizontalAlignment="Right" Margin="0,0,42,14" Name="label16" Width="54" FontSize="14" Height="31.04" VerticalAlignment="Bottom">:00</Label>
            </Grid>
        </GroupBox>
        <Image Height="144" Margin="172,-10,12,0" Name="image1" Stretch="Uniform" Source="/MediaBrowserService;component/MBSvcLogo.png" VerticalAlignment="Top" />
        <Button Height="35" Margin="230,0,221,20" Name="btnRefresh" VerticalAlignment="Bottom" FontSize="14" Click="btnRefresh_Click">Refresh Now</Button>
    </Grid>
</Window>
